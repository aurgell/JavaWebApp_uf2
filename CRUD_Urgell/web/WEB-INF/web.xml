    <!--Este parmetro configura el tipo de persistencia; sus posibles valores son
         pool: usa el pool de persistencia (que tiene que estar configurado el servidor de aplicaciones)
         JDBC: usa JDBC directamente; es necesario especificar la URL de la base de datos, el driver el usuario y el password
         file: usa un fichero; en este caso databaseURL es el nombre del fichero-->
    <context-param>
        <param-name>persistenceMechanism</param-name>
        <param-value>file</param-value>
    </context-param>
    <!--Comienzo de la configuracion de la base de datos jdbc:derby://localhost:1527/myfriends-->
    <context-param>
        <param-name>databaseURL</param-name>
        <param-value>/Users/albert/Desktop/DAW/Desplegament_aplicacions/ProjectesZip/CRUD_Urgell/src/java/data/users.cat</param-value>
    </context-param>
    <context-param>
        <param-name>databaseDriver</param-name>
